# Emotional OS Configuration
# Copy this file to .env and add your actual values

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_FUNCTION_URL=https://your-project.supabase.co/functions/v1/saori-fixed

# User Authentication (optional)
SUPABASE_USER_TOKEN=your-user-jwt-token

# OpenAI Configuration (if using direct integration)
OPENAI_API_KEY=your-openai-api-key

# Processing Mode Configuration
DEFAULT_PROCESSING_MODE=hybrid  # Options: local, supabase, hybrid
PRIVACY_MODE=false  # Set to true to only use local processing
# Processing Mode Configuration
# Default to local-only processing to avoid remote AI costs. Hybrid mode
# has been deprecated in this deployment â€” use local or supabase when
# explicitly required.
DEFAULT_PROCESSING_MODE=local  # Options: local, supabase
PREFER_AI=false  # Whether to try AI processing first (not used for local-only)
USE_LOCAL_FALLBACK=true  # Fall back to local if Supabase fails

# UI Configuration
STREAMLIT_PORT=8501
DEBUG_MODE=true