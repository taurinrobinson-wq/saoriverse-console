{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VelinorGlyphOrganizer",
  "type": "object",
  "properties": {
    "glyphs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "domain",
          "theme",
          "npc",
          "glyph_name",
          "location",
          "storyline_summary",
          "original_storyline_text"
        ],
        "properties": {
          "id": { "type": "integer", "minimum": 1 },
          "domain": {
            "type": "string",
            "enum": ["Ache","Legacy","Trust","Collapse","Sovereignty","Presence","Joy"]
          },
          "theme": { "type": "string" },
          "npc": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "role": { "type": "string" },
              "npc_images": { "type": "array", "items": { "type": "string" } },
              "background_images": { "type": "array", "items": { "type": "string" } }
            }
          },
          "glyph_name": { "type": "string" },
          "location": { "type": "string" },
          "storyline_summary": { "type": "string" },
          "original_storyline_text": { "type": "string" },
          "tone_integration": { "type": "array", "items": { "type": "string" } },
          "remnants_integration": { "type": "array", "items": { "type": "string" } },
          "player_choices": { "type": "array", "items": { "type": "string" } },
          "narrative_triggers": { "type": "array", "items": { "type": "string" } },
          "memory_fragments": { "type": "array", "items": { "type": "string" } },
          "tags": { "type": "array", "items": { "type": "string" } },
          "alignment_paths": {
            "type": ["object", "null"],
            "properties": {
              "path_a": { "type": "string" },
              "path_b": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "required": ["glyphs"]
}
