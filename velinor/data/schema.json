{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Velinor Data Schemas",
    "type": "object",
    "properties": {
        "background": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "imagePath": {
                    "type": "string"
                },
                "layers": {
                    "type": "object",
                    "properties": {
                        "background": {
                            "type": "string"
                        },
                        "midground": {
                            "type": "string"
                        },
                        "foreground": {
                            "type": "string"
                        },
                        "overlays": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "environmentalTone": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "notes": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "name",
                "imagePath",
                "layers",
                "environmentalTone"
            ]
        },
        "npc": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "role": {
                    "type": "string"
                },
                "domains": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "locationId": {
                    "type": "string"
                },
                "dialogueNodes": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "text": {
                                "type": "string"
                            },
                            "choices": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "text": {
                                            "type": "string"
                                        },
                                        "effects": {
                                            "type": "object"
                                        }
                                    },
                                    "required": [
                                        "id",
                                        "text"
                                    ]
                                }
                            },
                            "conditions": {
                                "type": "object"
                            },
                            "onEnterScript": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "id",
                            "text"
                        ]
                    }
                },
                "suggestionRules": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                },
                "notes": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "name",
                "role"
            ]
        },
        "glyph": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "domain": {
                    "type": "string"
                },
                "locationId": {
                    "type": "string"
                },
                "isFragment": {
                    "type": "boolean"
                },
                "requirements": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "triggerType": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "name",
                "domain",
                "locationId"
            ]
        }
    }
}