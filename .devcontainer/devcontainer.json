{
  "name": "Emotional OS DevContainer",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "main_v2.py"
      ]
    },
    "vscode": {
      "settings": {
  "python.defaultInterpreterPath": ".venv/bin/python",
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "streetsidesoftware.code-spell-checker",
        "ms-azuretools.vscode-containers",
        "DavidAnson.vscode-markdownlint"
      ]
    }
  },
  // Set simple container environment variables instead of using a GHCR-hosted feature
  // The 'env-vars' feature required GHCR access and failed during Codespaces creation.
  "containerEnv": {
    "GLYPH_MODE": "hybrid",
    "DEFAULT_TONE": "plain"
  },
  "updateContentCommand": "bash .devcontainer/setup.sh",
  "postCreateCommand": "bash .devcontainer/post_create.sh",
  "postAttachCommand": {
    "server": "streamlit run main_v2.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Emotional OS UI",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}
